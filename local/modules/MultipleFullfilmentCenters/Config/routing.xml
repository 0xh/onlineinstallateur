<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="MultipleFullfilmentCenters_module_config" path="/admin/module/MultipleFullfilmentCenters">
        <default key="_controller">MultipleFullfilmentCenters\Controller\Admin\MultipleFullfilmentCentersController::viewAction</default>
    </route>

    <route id="deliverydelay.config" path="/admin/module/deliverydelay/config">
        <default key="_controller">MultipleFullfilmentCenters\Controller\Admin\ConfigurationController::setGlobalConfig</default>
    </route>

    <route id="deliverydelay.product" path="/admin/module/deliverydelay/product/{product_id}">
        <default key="_controller">MultipleFullfilmentCenters\Controller\Admin\ConfigurationController::setProductConfig</default>
        <requirement key="product_id">\d+</requirement>
    </route>

    <route id="multiplefulfilmentcenters.locations.add" path="/admin/module/multiplefulfilmentcenters/locations/add">
        <default key="_controller">MultipleFullfilmentCenters\Controller\Admin\LocationStockController::addLocationStock</default>
    </route>

    <route id="multiplefulfilmentcenters.locations.update" path="/admin/module/multiplefulfilmentcenters/locations/update">
        <default key="_controller">MultipleFullfilmentCenters\Controller\Admin\LocationStockController::updateLocationStock</default>
    </route>

    <route id="multiplefulfilmentcenters.locations.delete" path="/admin/module/multiplefulfilmentcenters/locations/delete">
        <default key="_controller">MultipleFullfilmentCenters\Controller\Admin\LocationStockController::deleteLocationStock</default>
    </route>

</routes>
