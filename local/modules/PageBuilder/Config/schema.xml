<?xml version="1.0" encoding="UTF-8"?>
<database defaultIdMethod="native" name="thelia"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="../../../core/vendor/propel/propel/resources/xsd/database.xsd" >

    <table name="page_builder" namespace="PageBuilder\Model">
        <column autoIncrement="true" name="id" primaryKey="true" required="true" type="INTEGER"/>
        <column name="visible" required="true" type="TINYINT"/>
        <column name="title" type="VARCHAR" size="255" />
        <column name="header" type="VARCHAR" size="255" />
        <column name="footer" type="VARCHAR" size="255" />
        <column name="chapo" type="VARCHAR" size="255" />
        <column name="postscriptum" type="VARCHAR" size="255" />
        <column name="position" type="INTEGER" />
        <!-- add seo column -->
        <column name="meta_title" size="255" type="VARCHAR" />
        <column name="meta_description" type="LONGVARCHAR" />
        <column name="meta_keywords" type="LONGVARCHAR" />
        <!-- end add seo column -->
        <behavior name="timestampable" />
        <behavior name="i18n">
            <parameter name="i18n_columns" value="title, header, footer, chapo, postscriptum, meta_title, meta_description, meta_keywords" />
        </behavior>
    </table>

    <table name="page_builder_product" namespace="PageBuilder\Model">
        <column name="page_builder_id" primaryKey="true" required="true" type="INTEGER"/>
        <column name="product_id" primaryKey="true" required="true" type="INTEGER"/>
        <column name="position" required="true" type="INTEGER"/>
        <foreign-key foreignTable="product" name="fk_page_builder_product_product_id" onDelete="CASCADE" onUpdate="RESTRICT">
            <reference foreign="id" local="product_id"/>
        </foreign-key>
        <foreign-key foreignTable="page_builder" name="fk_page_builder_product_page_builder_id" onDelete="CASCADE" onUpdate="RESTRICT">
            <reference foreign="id" local="page_builder_id"/>
        </foreign-key>
        <behavior name="timestampable" />
    </table>

    <table name="page_builder_content" namespace="PageBuilder\Model">
        <column name="page_builder_id" primaryKey="true" required="true" type="INTEGER"/>
        <column name="content_id" primaryKey="true" required="true" type="INTEGER"/>
        <column name="position" type="INTEGER"/>
        <foreign-key foreignTable="content" name="fk_page_builder_content_content_id" onDelete="CASCADE" onUpdate="RESTRICT">
            <reference foreign="id" local="content_id"/>
        </foreign-key>
        <foreign-key foreignTable="page_builder" name="fk_page_builder_content_page_builder_id" onDelete="CASCADE" onUpdate="RESTRICT">
            <reference foreign="id" local="page_builder_id"/>
        </foreign-key>
        <behavior name="timestampable" />
    </table>


    <table name="page_builder_image" namespace="PageBuilder\Model">
        <column autoIncrement="true" name="id" primaryKey="true" required="true" type="INTEGER"/>
        <column name="page_builder_id" required="true" type="INTEGER"/>
        <column name="file" required="true" size="255" type="VARCHAR" />
        <column defaultValue="1" name="visible" required="true" type="TINYINT" />
        <column name="position" type="INTEGER" />
        <column name="title" size="255" type="VARCHAR" />
        <column name="description" type="CLOB" />
        <column name="chapo" type="LONGVARCHAR" />
        <column name="postscriptum" type="LONGVARCHAR" />
        <foreign-key foreignTable="page_builder" name="fk_page_builder_image_page_builder_id" onDelete="CASCADE" onUpdate="RESTRICT">
            <reference foreign="id" local="page_builder_id" />
        </foreign-key>
        <behavior name="timestampable" />
        <behavior name="i18n">
            <parameter name="i18n_columns" value="title, description, chapo, postscriptum" />
        </behavior>
    </table>

    <table name="page_builder_element" namespace="PageBuilder\Model">
        <column autoIncrement="true" name="id" primaryKey="true" required="true" type="INTEGER"/>
        <column name="page_builder_id" type="INTEGER" required="true"/>
        <column name="visible" required="true" type="TINYINT"/>        
        <column name="position" type="INTEGER" />
        <column name="template_name" type="VARCHAR" size="255" />
        <column name="variables" type="LONGVARCHAR" />
        <foreign-key foreignTable="page_builder" name="fk_page_builder_element_page_builder_id" onDelete="CASCADE" onUpdate="RESTRICT">
            <reference foreign="id" local="page_builder_id" />
        </foreign-key>
        <behavior name="timestampable" />
        <behavior name="i18n">
            <parameter name="i18n_columns" value="variables" />
        </behavior>
        <behavior name="versionable">
            <parameter name="log_created_at" value="true" />
            <parameter name="log_created_by" value="true" />
        </behavior>
    </table>
    
    <external-schema filename="local/config/schema.xml" referenceOnly="true" />
</database>
