	      <reference local="brand_intern" foreign="id"/>
	    </foreign-key>
	    <vendor type="mysql">
	      <parameter name="Engine" value="InnoDB"/>
	    </vendor>
	</table>
	
    <external-schema filename="local/config/schema.xml" referenceOnly="true" />
    
