<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <!--    definire ruta configurare modul-->
    <route id="LocalPickup_module_config" path="/admin/module/LocalPickup">
        <default key="_controller">LocalPickup\Controller\Admin\LocalPickupController::viewAction</default>
    </route>
    
    <route id="localpickup.locations.add" path="/admin/module/localpickup/locations/add">
        <default key="_controller">LocalPickup\Controller\Admin\LocalPickUpLocationsStockController::addLocationStock</default>
    </route>
    
    <route id="localpickup.locations.update" path="/admin/module/localpickup/locations/update">
        <default key="_controller">LocalPickup\Controller\Admin\LocalPickUpLocationsStockController::updateLocationStock</default>
    </route>

    <route id="localpickup.locations.delete" path="/admin/module/localpickup/locations/delete">
        <default key="_controller">LocalPickup\Controller\Admin\LocalPickUpLocationsStockController::deleteLocationStock</default>
    </route>
    
    
</routes>
