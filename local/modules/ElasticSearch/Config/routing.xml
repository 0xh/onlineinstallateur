<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <!--

    if a /admin/module/elasticsearch/ route is provided, a "Configuration" button will be displayed
    for the module in the module list. Clicking this button will invoke this route.

    <route id="my_route_id" path="/admin/module/elasticsearch">
        <default key="_controller">ElasticSearch\Full\Class\Name\Of\YourConfigurationController::methodName</default>
    </route>

-->

    <route id="elastic_search" path="/el_search">
        <default key="_controller">ElasticSearch\Controller\Front\ElasticSearchController::showResults</default>
    </route>
<!--
    ...add as many routes as required.

    <route>
    ...
    </route>
    -->

</routes>
