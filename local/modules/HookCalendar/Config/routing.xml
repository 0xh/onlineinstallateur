<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    
    <route id="calendar.get.month" path="/calendar/month">
        <default key="_controller">HookCalendar\Controller\CalendarController::getDaysFromMonthRequest</default>
    </route>   
     
    <route id="calendar.get.day" path="/calendar/day">
        <default key="_controller">HookCalendar\Controller\CalendarController::getTimeslotsFromDayRequest</default>
    </route>   

</routes>
